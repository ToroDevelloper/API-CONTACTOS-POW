<!DOCTYPE html>
<html>

<head>
    <title>Estadísticas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="container mt-4">

    <h1 class="text-center">ESTADISTICA POR BARRIO</h1>
    <a href="/" class="btn btn-secondary mb-3">← Volver</a>

    <div class="card mb-4">
        <div class="card-body text-center">
            <h3 class="text-primary">Total de Contactos: <%= totalContactos %>
            </h3>
        </div>
    </div>

    <div class="row">
        <% barrios.forEach(function(barrio) { %>
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= barrio.barrio || 'Sin dirección' %>
                        </h5>
                        <p class="card-text">
                            <strong>
                                <%= barrio.cantidad %>
                            </strong> contactos
                            (<%= barrio.porcentaje %>%)
                        </p>
                        <div class="progress">
                            <div class="progress-bar" style="width: <%= barrio.porcentaje %>%">
                                <%= barrio.porcentaje %>%
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
    </div>
</body>

</html>