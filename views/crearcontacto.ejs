<!DOCTYPE html>
<html>

<head>
    <title>Crear Contacto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="container mt-4">
    <h1 class="text-center">CREAR CONTACTO</h1>
    <a href="/" class="btn btn-secondary mb-3">‚Üê Volver</a>

    <form method="POST" action="/contacto" class="card p-4">
        <h5>Informaci√≥n Personal</h5>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Primer Nombre *</label>
                <input type="text" class="form-control" name="primer_nombre" required>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label">Segundo Nombre</label>
                <input type="text" class="form-control" name="segundo_nombre">
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Primer Apellido *</label>
                <input type="text" class="form-control" name="primer_apellido" required>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label">Segundo Apellido</label>
                <input type="text" class="form-control" name="segundo_apellido">
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">G√©nero</label>
            <select class="form-select" name="id_genero">
                <option value="">Seleccionar g√©nero</option>
                <% generos.forEach(function(g) { %>
                    <option value="<%= g.id_genero %>">
                        <%= g.detalle_genero %>
                    </option>
                    <% }); %>
            </select>
        </div>

        <h5 class="mt-4">Informaci√≥n de Contacto</h5>

        <div class="mb-3">
            <label class="form-label">Direcci√≥n</label>
            <select class="form-select" name="id_direccion">
                <option value="">Seleccionar direcci√≥n</option>
                <% direcciones.forEach(function(d) { %>
                    <option value="<%= d.id_direccion %>">
                        <%= d.detalle_direccion %>
                    </option>
                    <% }); %>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Tipo de Tel√©fono</label>
            <select class="form-select" name="id_tipo_telefono">
                <option value="">Seleccionar tipo</option>
                <% tipos.forEach(function(t) { %>
                    <option value="<%= t.id_tipo_telefono %>">
                        <%= t.detalle_tipo_telefono %>
                    </option>
                    <% }); %>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Tel√©fono</label>
            <input type="text" class="form-control" name="telefono">
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" name="email">
        </div>

        <button type="submit" class="btn btn-primary">üíæ Guardar Contacto</button>
    </form>
</body>

</html>